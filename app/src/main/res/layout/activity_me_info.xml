<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.5dp"
            android:background="#fff"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <com.miracle.base.view.CircleImageView
                android:id="@+id/ivHeadImg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/default_head" />

        </LinearLayout>

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ItemBar_Left_Icon="昵称:"
            app:ItemBar_RightVisibility="gone" />

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ItemBar_Left_Icon="手机:"
            app:ItemBar_RightVisibility="gone" />

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ItemBar_Left_Icon="邮箱:"
            app:ItemBar_RightVisibility="gone"
            android:visibility="gone"
            />

        <com.miracle.base.view.ItemBar
            android:id="@+id/ibModifyPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:ItemBar_Left_Icon="修改密码"
            android:visibility="gone"
            />
    </LinearLayout>
</layout>