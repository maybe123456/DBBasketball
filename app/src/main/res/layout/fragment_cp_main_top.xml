<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.youth.banner.Banner
                    android:visibility="visible"
                    android:id="@+id/main_farg1_banner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:indicator_drawable_selected="@drawable/dot_selected"
                    app:indicator_drawable_unselected="@drawable/dot_normal"
                    app:indicator_height="5dp"
                    app:indicator_margin="4dp"
                    app:indicator_width="5dp" />

                <!--<com.scwang.wave.MultiWaveHeader
                    android:id="@+id/waveHeader"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleY="-1"
                    app:mwhCloseColor="@color/white"
                    app:mwhColorAlpha="1"
                    app:mwhGradientAngle="270"
                    app:mwhIsRunning="true"
                    app:mwhProgress="0.6"
                    app:mwhStartColor="@color/white"
                    app:mwhVelocity="3"
                    app:mwhWaveHeight="15dp"
                    app:mwhWaves="MultiWave" />-->

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新公告"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/beijin"
                android:padding="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/redSpeaker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/xlbbb" />

                <com.gongwen.marqueen.SimpleMarqueeView
                    android:visibility="gone"
                    android:id="@+id/marqueeView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:animateFirstView="true"
                    android:autoStart="true"
                    android:flipInterval="2500"
                    app:smvTextEllipsize="end"
                    app:smvTextSingleLine="true"
                    android:inAnimation="@anim/in_top"
                    android:outAnimation="@anim/out_bottom"
                    app:marqueeAnimDuration="500"
                    app:smvTextColor="@color/black"
                    app:smvTextGravity="center_vertical"
                    app:smvTextSize="16sp" />


                <TextSwitcher
                    android:id="@+id/cp_main_top_ts"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></TextSwitcher>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/main_static_ticket"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <LinearLayout
                    android:id="@+id/main_ll1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/main_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:padding="2dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@mipmap/icon_homemain_oprea_kaijiang" />

                    <LinearLayout
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:clickable="false"
                            android:focusable="false"
                            android:id="@+id/main_title_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="彩票大厅"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/main_subtitle_tv1"
                            android:layout_width="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:layout_height="wrap_content"
                            android:text="多彩种资讯汇集"
                            android:textColor="#666" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#ddd" />

                <LinearLayout
                    android:id="@+id/main_ll2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/main_iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:padding="2dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:src="@mipmap/icon_happypoker"
                         />

                    <!--android:src="@mipmap/icon_homemain_oprea_kaijiang"-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/main_title_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="双色走势"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/main_subtitle_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="看走势，有好运"
                            android:textColor="#666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="#ddd"></View>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="新猜测"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/main_frag_more1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:text="更多资讯"
                    android:textColor="#55e"
                    android:textSize="12sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/main_frag_hs2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/main_frag_hs_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="新中奖号码"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_frag_more3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:text="查看历史"
                    android:visibility="gone"
                    android:textColor="#55e"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:id="@+id/main_farg_newnum_frag"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ball_size"
                        android:background="#f00"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/main_farg_tryrand"
                    android:text="试试手气"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ebpay_circular_bg2"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:visibility="visible"
                    android:textColor="#800"
                    android:layout_width="70dp"
                    android:layout_height="28dp" />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="新资讯"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_frag_more2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="4dp"
                    android:text="更多分类"
                    android:textColor="#55e"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

</layout>